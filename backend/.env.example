# Server Configuration
PORT=5000
NODE_ENV=development

# Database (default: SQLite for local/dev)
DATABASE_URL="file:./prisma/dev.db"

# JWT Secrets
JWT_ACCESS_SECRET=your-super-secret-access-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production

# Email Configuration (Gmail Example)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password

# Frontend URL
FRONTEND_URL=http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=5

# LCPS AI (Python) service (optional)
# 1) Start the Python server:
#    python backend/lcps_ai_service/server.py
# 2) Point the backend to it:
LCPS_AI_URL=http://127.0.0.1:8001
LCPS_AI_TIMEOUT_MS=15000

# OpenAI (optional - used for audio transcription fallback)
# IMPORTANT: Do NOT commit real keys. Set this in your local backend/.env
OPENAI_API_KEY=your-openai-api-key
# Default is Whisper; can be overridden if you want a different OpenAI audio model
OPENAI_STT_MODEL=whisper-1
